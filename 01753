#include<bits/stdc++.h>
using namespace std;
typedef pair<int,int> pii;
typedef long long ll;

ll dist[20001],V,E,st,INF=1e9+7;
vector<pii> v[20001];

void mindist()
{
    priority_queue<pii,vector<pii>,greater<> > pq;
    pq.push({0,st});
    dist[st]=0;

    while(!pq.empty())
    {
        pii cur=pq.top();
        pq.pop();

        for(int i=0;i<v[cur.second].size();i++)
        {
            pii next=v[cur.second][i];
            ll curdist=cur.first+next.second
            if(dist[next.first]>curdist)
            {
                dist[next.first]=curdist;
                pq.push({curdist,next.first});
            }
        }
    }
}

int main()
{
    cin>>V>>E>>st;

    for(int i=1;i<=V;i++) dist[i]=INF;
    
    for(int v1,v2,e,i=0;i<E;i++)
    {
        cin>>v1>>v2>>e;
        v[v1].push_back({v2,e});
    }
    mindist();
    
    for(int i=1;i<=V;i++)
    {
        if(dist[i]==INF) cout<<"INF\n";
        else cout<<dist[i]<<"\n";
    }
}
